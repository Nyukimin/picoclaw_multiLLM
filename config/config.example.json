    },
    "ollama": {
      "api_key": "",
      "api_base": "http://localhost:11434/v1"
    },
    "ollama_restart_command": ""
  },
  "tools": {
    "web": {
      "brave": {
        "enabled": false,
        "api_key": "YOUR_BRAVE_API_KEY",
        "max_results": 5
      },
      "perplexity": {
        "enabled": false,
        "api_key": "pplx-xxx",
        "max_results": 5
      }
    },
    "cron": {
      "exec_timeout_minutes": 5
    }
  },
  "routing": {
    "classifier": {
      "enabled": true,
      "min_confidence": 0.6,
      "min_confidence_for_code": 0.8
    },
    "fallback_route": "CHAT",
    "llm": {
      "chat_alias": "Mio",
      "chat_provider": "ollama",
      "chat_model": "ollama/chat-v1:latest",
      "worker_alias": "Shiro",
      "worker_provider": "ollama",
      "worker_model": "ollama/worker-v1:latest",
      "coder_alias": "Aka",
      "coder_provider": "deepseek",
      "coder_model": "deepseek-chat",
      "coder2_alias": "Ao",
      "coder2_provider": "openai",
      "coder2_model": "gpt-4",
      "coder3_alias": "Claude",
      "coder3_provider": "anthropic",
      "coder3_model": "claude-sonnet-4-5-20250929"
    }
  },
  "loop": {
    "max_loops": 3,
    "max_millis": 25000,
    "allow_auto_reroute_once": true,
    "allow_chat_propose_reroute_once": true
  },
  "heartbeat": {
    "enabled": true,
    "interval": 30
  },
  "devices": {
    "enabled": false,
    "monitor_usb": true
  },
  "mcp": {
    "chrome": {
      "enabled": false,
      "base_url": "http://100.83.235.65:12306",
