# Ops watchdog concrete baseline (copy to ~/.picoclaw/.env)

# Enable watchdog operation
PICOCLAW_WATCHDOG_ENABLED=true
PICOCLAW_WATCHDOG_INTERVAL_SEC=60

# Target services/endpoints
PICOCLAW_WATCHDOG_GATEWAY_SERVICE=picoclaw-gateway.service
PICOCLAW_WATCHDOG_GATEWAY_PORT=18790
PICOCLAW_WATCHDOG_LINE_WEBHOOK_PORT=18791
PICOCLAW_WATCHDOG_HEALTH_URL=http://127.0.0.1:18790/health
PICOCLAW_WATCHDOG_READY_URL=http://127.0.0.1:18790/ready
PICOCLAW_WATCHDOG_WEBHOOK_URL=https://fujitsu-ubunts.tailb07d8d.ts.net/webhook/line
PICOCLAW_WATCHDOG_OLLAMA_MODELS_URL=http://100.83.207.6:11434/v1/models

# Recovery policy
PICOCLAW_WATCHDOG_RESTART_WINDOW_SEC=600
PICOCLAW_WATCHDOG_RESTART_MAX_COUNT=3
PICOCLAW_WATCHDOG_LOCAL_TIMEOUT_SEC=3
PICOCLAW_WATCHDOG_EXTERNAL_TIMEOUT_SEC=5
PICOCLAW_WATCHDOG_ALERT_COOLDOWN_SEC=900

# LINE ops alert (notify-only; no kick)
PICOCLAW_WATCHDOG_LINE_NOTIFY_ENABLED=false
PICOCLAW_WATCHDOG_LINE_NOTIFY_TO=Uxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PICOCLAW_CHANNELS_LINE_CHANNEL_ACCESS_TOKEN=YOUR_LINE_CHANNEL_ACCESS_TOKEN

# Manual kick path (for LINE-triggered operations via controlled bridge)
PICOCLAW_WATCHDOG_KICK_ENABLED=false
PICOCLAW_WATCHDOG_KICK_TOKEN=replace_with_long_random_string
PICOCLAW_WATCHDOG_KICK_FILE=~/.picoclaw/state/watchdog/kick_request
